<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/nav'); %>
    <div class="container">
      <h1 class="mb-4">Dashboard</h1>
      <form method="post" action="/requisition" class="row g-3 mb-4">
        <div class="col-md-6">
          <label class="form-label">Asset</label>
          <select name="asset_id" class="form-select">
            <% assets.forEach(a => { %>
              <option value="<%= a.id %>"><%= a.name %> (<%= a.quantity %>)</option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label">Quantity</label>
          <input type="number" name="quantity" class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
          <button class="btn btn-primary w-100">Request</button>
        </div>
      </form>
      <h2>Your Requisitions</h2>
      <table class="table">
        <thead>
          <tr><th>Asset</th><th>Qty</th><th>Status</th></tr>
        </thead>
        <tbody>
          <% reqs.forEach(r => { %>
            <tr>
              <td><%= r.asset %></td>
              <td><%= r.quantity %></td>
              <td><%= r.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
