<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
  </head>
  <body>
    <h2>Welcome <%= user.username %></h2>
    <form method="post" action="/logout"><button type="submit">Logout</button></form>

    <h3>Request Asset</h3>
    <form method="post" action="/requisition">
      <select name="asset_id">
        <% assets.forEach(function(asset){ %>
          <option value="<%= asset.id %>"><%= asset.name %> (Available: <%= asset.quantity %>)</option>
        <% }) %>
      </select>
      <input type="number" name="quantity" value="1" min="1" />
      <button type="submit">Request</button>
    </form>

    <h3>Your Requisitions</h3>
    <ul>
      <% reqs.forEach(function(r){ %>
        <li><%= r.asset %> - <%= r.quantity %> - <%= r.status %> (level <%= r.approval_level %>)</li>
      <% }) %>
    </ul>
    <a href="/inventory">Inventory</a> | <a href="/approvals">Approvals</a> | <a href="/profile">Profile</a>
  </body>
</html>

