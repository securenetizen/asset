<!DOCTYPE html>
<html>
  <head>
    <title>Approvals</title>
  </head>
  <body>
    <h1>Approvals</h1>
    <ul>
      <% requisitions.forEach(function(r){ %>
        <li>
          <%= r.username %> requested <%= r.quantity %> x <%= r.asset %>
          <form method="post" action="/approvals/<%= r.id %>/approve" style="display:inline">
            <button type="submit">Approve</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <a href="/dashboard">Back</a>
  </body>
</html>

