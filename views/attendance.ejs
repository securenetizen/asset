<!DOCTYPE html>
<html>
  <head>
    <title>Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/nav'); %>
    <div class="container">
      <h1 class="mb-4">Attendance</h1>
      <form method="post" action="/attendance/checkin" class="mb-3">
        <button class="btn btn-success">Check In</button>
      </form>
      <table class="table">
        <thead><tr><th>Time</th></tr></thead>
        <tbody>
          <% records.forEach(r => { %>
            <tr><td><%= new Date(r.timestamp).toLocaleString() %></td></tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
